{
    "name": "garvinhicking/adhoc-tasks",
    "type": "typo3-cms-extension",
    "description": "Allows to run any TYPO3 (v14+) Scheduler Task on the command line, with custom configuration.",
    "homepage": "https://typo3.org",
    "license": ["GPL-2.0-or-later"],
    "authors": [{
        "name": "Garvin Hicking",
        "email": "garvin@hick.ing",
        "role": "Developer"
    }],
    "support": {
        "issues": "https://github.com/garvinhicking/typo3-adhoc-tasks/issues",
        "source": "https://github.com/garvinhicking/typo3-adhoc-tasks"
    },
	"minimum-stability": "dev",
	"prefer-stable": true,
	"config": {
        "preferred-install": {
            "typo3/cms-core": "source",
            "*": "dist"
        },
        "vendor-dir": ".Build/vendor",
        "bin-dir": ".Build/bin",
        "sort-packages": true,
        "allow-plugins": {
            "typo3/class-alias-loader": true,
            "typo3/cms-composer-installers": true
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "packages/*"
        }
    ],
    "require": {
        "typo3/cms-core": "14.0.x@dev",
        "typo3/cms-scheduler": "14.0.x@dev"
    },
    "replace": {
        "garvinhicking/adhoc-tasks": "*"
    },
    "extra": {
        "typo3/cms": {
            "web-dir": ".Build/public",
            "extension-key": "adhoc_tasks"
        }
    },
    "autoload": {
        "psr-4": {
            "GarvinHicking\\AdHocTasks\\": "Classes"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GarvinHicking\\AdHocTasks\\Tests\\": "Tests/",
            "TYPO3\\CMS\\Core\\Tests\\": ".Build/vendor/typo3/cms-core/Tests/"
        }
    },
    "require-dev": {
        "bnf/phpstan-psr-container": "^1.0.1",
        "friendsofphp/php-cs-fixer": "^3.22",
        "friendsoftypo3/phpstan-typo3": "^0.9.0",
        "phpstan/phpstan": "^1.0 || ^2.0",
        "phpstan/phpstan-phpunit": "^1.3.13",
        "typo3/cms-cli": "^3.1",
        "typo3/cms-recycler": "14.0.x@dev",
        "typo3/coding-standards": "^0.8",
        "typo3/testing-framework": "dev-main"
    },
    "scripts": {
        "pre-update-cmd": [
            "[ -d \"packages\" ] || mkdir packages"
        ],
        "pre-autoload-dump": [
            "[ -d \"config\" ] || cp -a ./Build/config.example ./config"
        ],
        "tests": [
            "Build/Scripts/runTests.sh -s cgl",
            "Build/Scripts/runTests.sh -s phpstan",
            "Build/Scripts/runTests.sh -s unit",
            "Build/Scripts/runTests.sh -s functional"
        ]
    }
}
